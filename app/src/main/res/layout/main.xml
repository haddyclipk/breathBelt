<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@android:color/white"
        >
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:text="breath chest belt UB ESC lab"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
        android:id="@+id/textView" />

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="stop"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/textView2" />

    <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Scan"
            android:id="@+id/button"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="breath"
        android:id="@+id/button4"

        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="record data"
        android:id="@+id/button2"

        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/button4"
        android:layout_marginEnd="56dp" />

    <TextView
        android:layout_width="154dp"
        android:layout_height="70dp"
        android:text="default path"
        android:id="@+id/direction"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button4" />

    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
        android:layout_below="@+id/direction"
        android:layout_alignParentStart="true"
        android:layout_marginTop="62dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/tt"
        android:textSize="20dp"
        android:text="tt"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignEnd="@+id/at" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/tc"
        android:textSize="20dp"
        android:text="tc"
        android:layout_below="@+id/tt"
        android:layout_alignStart="@+id/freq" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/at"
        android:textSize="20dp"
        android:text="at"
        android:layout_above="@+id/direction"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/freq"
        android:textSize="20dp"
        android:text="fr"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignStart="@+id/at" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total time"
        android:id="@+id/textView2"

        android:textSize="20dp"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="counts"
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tc"
        android:layout_alignBottom="@+id/tc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="avgTm"
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/at"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="freq"
        android:id="@+id/textView5"
        android:textSize="20dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

</RelativeLayout>

